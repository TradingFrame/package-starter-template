{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],

    // Make the root alias "@/..." work from inside the playground:
    "baseUrl": "../../",
    "paths": { "@/*": ["src/*"] },
    "isolatedDeclarations": false
  },
  "include": ["./**/*", "../../src"]
}
