{
  "name": "package-starter-template",
  "version": "0.1.0",
  "description": "Modern scaffolding template for TypeScript libraries (Node + browser)",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.6.0"
  },
  "packageManager": "pnpm@10.16.1",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "typecheck:all": "pnpm run typecheck && pnpm run typecheck:test",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"{src,test}/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "pnpm run typecheck:all && pnpm run lint && pnpm run format:check && pnpm test && pnpm run build"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "pre-push": "pnpm run typecheck:all"
  },
  "lint-staged": {
    "*.{md,yml,yaml,json}": "prettier --write --ignore-unknown",
    "*.{js,cjs,mjs,ts}": "prettier --write --ignore-unknown",
    "src/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "test/**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "typescript",
    "library",
    "bundler",
    "tsdown",
    "template"
  ]
}
